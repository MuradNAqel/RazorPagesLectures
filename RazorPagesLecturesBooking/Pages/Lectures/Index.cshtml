<form>
    <p>
        <select asp-for="LecturerName" asp-items="Model.LecturerNames">
            <option value="">All</option>
        </select>
        <label>Title: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].LecturerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].LectureDateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].Capacity)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lecture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LectureDateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
